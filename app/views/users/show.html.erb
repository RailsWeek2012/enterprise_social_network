<div class="btn-group actions">
  <%= back_to_users %>
</div>
<div class="well profile">
    <div class="image">
      <%= gravatar_image_tag(@user.email, alt: @user.full_name) %>
    </div>
    <p>
      <b>First name:</b>
      <%= @user.first_name %>
    </p>

    <p>
      <b>Last name:</b>
      <%= @user.last_name %>
    </p>

    <p>
      <b>Email:</b>
      <%= @user.email %>
    </p>

    <p>
      <b>Company:</b>
      <%= company_link @user.company %>
    </p>
</div>
