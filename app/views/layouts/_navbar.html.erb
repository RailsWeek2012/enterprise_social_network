<% @application_name = "EnSoNet" %>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="<%= root_path %>"><%= @application_name %></a>
      <% if user_signed_in? %>
        <ul class="nav">
          <li><%= link_to "Invite", invite_user_path %></li>
        </ul>
      <% end %>
      <ul class="nav pull-right">
        <% if user_signed_in? %>
            <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
            <li><%= link_to "Logout", :logout %></li>
        <% else %>
            <% @user_session = UserSession.new %>
            <li><%= link_to "Register", new_user_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li style="margin: 10px"><%= render "user_sessions/form" %></li>
              </ul>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>