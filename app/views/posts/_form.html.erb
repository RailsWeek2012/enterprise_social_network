<%= simple_form_for(@post, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :message, as: :text, input_html: { rows: 3 } %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :group_id, type: 'hidden' %>
    <%= f.hidden_field :company_id, type: 'hidden' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
